<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameTop_competition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearChannel_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardChannel_competition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frame">

                <ImageView
                    android:id="@+id/ivChannel_competition"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/show_tv" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/tvChannel_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_bold"
                    android:text="Show TV"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_regular"
                    android:text="6 saat önce"
                    android:textColor="@color/color_BABABA"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/frameTop_competition">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearProgram_competition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivSeries_competition"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/example_series"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/tvName_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_bold"
                    android:paddingStart="6dp"
                    android:text="Güzel Günler"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameTop">

                <TextView
                    android:id="@+id/tvQuestion1_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption1_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption2_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvQuestion2_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption3_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption4_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvQuestion3_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption5_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption6_competition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvRedirect_competition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_20_white"
                android:gravity="center"
                android:padding="12dp"
                android:text="Yarışmaya katılmak için kanal sayfasına gidiniz"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="-1dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivBackground_competition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/series_1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/ivBanner_competition"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearHide_competition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingHorizontal="20dp">

            <!--
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardChannel2_competition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/frame">

                            <ImageView
                                android:id="@+id/ivChannel2_competition"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/show_tv" />

                        </androidx.cardview.widget.CardView>
            -->
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="start"
                android:id="@+id/ivProduct_competition"
                android:layout_width="112dp"
                android:layout_height="63dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_gravity="end"
                android:id="@+id/cardShare_competition"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/white_20"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView_competition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:blurOverlayColor="@color/white_20">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/example_border"
                        android:padding="15dp"
                        android:src="@drawable/send_3" />

                </eightbitlab.com.blurview.BlurView>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>