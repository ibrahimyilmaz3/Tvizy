<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SendActivity">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfile"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/example_profile"
                app:shapeAppearanceOverlay="@style/Circular" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/satoshi_medium"
                android:paddingStart="5dp"
                android:text="Ayşe"
                android:textColor="@color/color_121213"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/linearNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom"
                android:src="@drawable/edit" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_20_white_4"
        android:fontFamily="@font/satoshi_regular"
        android:padding="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/three"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/three"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_20_white_3"
        android:fontFamily="@font/satoshi_regular"
        android:padding="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do."
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/two"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/two"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_20_white_2"
        android:fontFamily="@font/satoshi_regular"
        android:padding="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do."
        android:textColor="@color/color_121213"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/one"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_20_white_1"
        android:fontFamily="@font/satoshi_regular"
        android:padding="15dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do."
        android:textColor="@color/color_121213"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/linearBottom"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearAttach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bottom_curved_purple"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/linearBottom"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingEnd="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/linear_camera"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_20_white_3"
                android:fontFamily="@font/satoshi_regular"
                android:paddingTop="5dp"
                android:text="Kamera"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/two"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/gallery"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_20_white_3"
                android:fontFamily="@font/satoshi_regular"
                android:paddingTop="5dp"
                android:text="Galeri"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/two"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_curved_no_shadow"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/round_30_light_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/feather_smile" />

            <EditText
                android:id="@+id/etSendMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/none"
                android:fontFamily="@font/satoshi_regular"
                android:hint="Mesajınızı yazınız..."
                android:inputType="textCapSentences|textMultiLine"
                android:maxHeight="200dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="13dp"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivAttach"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/attach"
                app:tint="@color/color_c1c1c1" />

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/send_2"
                android:visibility="gone"
                app:tint="@color/light_purple" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>