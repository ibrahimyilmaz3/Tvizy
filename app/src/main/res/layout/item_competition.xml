<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_16_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearProgram_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivSeries_comp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/example_series"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/competeTitle_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_bold"
                    android:paddingStart="6dp"
                    android:text="Güzel Günler - Günün Yarışması"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameTop">

                <TextView
                    android:id="@+id/tvQuestion1_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption1_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption2_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvQuestion2_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption3_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption4_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvQuestion3_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_16_white"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Sence Fatih haklı mı?"
                    android:textColor="@color/light_purple"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvOption5_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvOption6_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_9_white"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="start"
                    android:minWidth="100dp"
                    android:padding="5dp"
                    android:text="Cevaplamak için tıklayın"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/linearSend_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_10_purple"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:id="@+id/tvSend_comp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/satoshi_bold"
                        android:paddingEnd="5dp"
                        android:text="Gönder"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ivTick_comp"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/tick_black"
                        android:visibility="gone"
                        app:tint="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_bold"
                    android:paddingTop="10dp"
                    android:text="*Yarışma sonucunu Show TV'de takip edebilirsiniz."
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="-1dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/ivBackground_comp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/series_1" />

        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardShare_comp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white_20"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView_comp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:blurOverlayColor="@color/white_20">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/tvHide_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:fontFamily="@font/satoshi_bold"
                    android:text="Buraya Tıkla"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ivHide_comp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="start|center_vertical"
                    android:src="@drawable/send_3" />

            </FrameLayout>

        </eightbitlab.com.blurview.BlurView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
